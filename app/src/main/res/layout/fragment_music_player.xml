<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorMain">    <com.android.music.Widgets.CustomTitleBar        android:id="@+id/customTitleBar"        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:centerArtistText="@string/app_name"        app:centerTitleText="@string/app_name"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:leftButtonImageID="@drawable/ic_left_pressed"        app:rightButtonImageID="@drawable/ic_send" />    <com.android.music.Widgets.CustomCircleImageView        android:id="@+id/musicPicture"        android:layout_width="250dp"        android:layout_height="250dp"        android:src="@mipmap/ic_launcher"        app:civ_border_color="@color/colorMain"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.5"        app:layout_constraintHorizontal_bias="0.5"/>    <androidx.appcompat.widget.AppCompatSeekBar        android:id="@+id/mPlayProgress"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:max="100"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintHorizontal_bias="0.0"        app:layout_constraintLeft_toRightOf="@+id/mPlayerNowTime"        app:layout_constraintRight_toLeftOf="@+id/mPlayerTotalTime"        app:layout_constraintTop_toBottomOf="@+id/musicPicture"        app:layout_constraintVertical_bias="0.5" />    <TextView        android:id="@+id/mPlayerNowTime"        android:layout_width="wrap_content"        android:layout_height="0dp"        android:text="00:00"        android:textColor="#65FFF8F8"        android:layout_marginStart="10dp"        android:textSize="12sp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toLeftOf="@+id/mPlayProgress"        app:layout_constraintBottom_toBottomOf="@+id/mPlayProgress"        app:layout_constraintTop_toTopOf="@+id/mPlayProgress" />    <TextView        android:id="@+id/mPlayerTotalTime"        android:layout_width="wrap_content"        android:layout_height="0dp"        android:text="00:00"        android:textColor="#65FFF8F8"        android:textSize="12sp"        android:layout_marginEnd="10dp"        app:layout_constraintLeft_toRightOf="@+id/mPlayProgress"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintBottom_toBottomOf="@+id/mPlayProgress"        app:layout_constraintTop_toTopOf="@+id/mPlayProgress" />    <ImageButton        android:id="@+id/mBtnOption"        android:layout_width="45dp"        android:layout_height="45dp"        android:layout_marginEnd="15dp"        android:layout_marginStart="10dp"        android:background="@drawable/ic_previous"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toBottomOf="@+id/mPlayProgress"        app:layout_constraintRight_toLeftOf="@+id/mBtnPrevious"        app:layout_constraintBottom_toBottomOf="parent"/>    <ImageButton        android:id="@+id/mBtnPrevious"        android:layout_width="50dp"        android:layout_height="50dp"        android:background="@drawable/ic_previous"        app:layout_constraintLeft_toRightOf="@+id/mBtnOption"        app:layout_constraintTop_toBottomOf="@+id/mPlayProgress"        app:layout_constraintRight_toLeftOf="@+id/mBtnPlay"        app:layout_constraintBottom_toBottomOf="parent"/>    <ImageButton        android:id="@+id/mBtnPlay"        android:layout_width="70dp"        android:layout_height="70dp"        android:background="@drawable/ic_play_circle"        app:layout_constraintLeft_toRightOf="@+id/mBtnPrevious"        app:layout_constraintTop_toBottomOf="@+id/mPlayProgress"        app:layout_constraintRight_toLeftOf="@+id/mBtnNext"        app:layout_constraintBottom_toBottomOf="parent"/>    <ImageButton        android:id="@+id/mBtnNext"        android:layout_width="50dp"        android:layout_height="50dp"        android:background="@drawable/ic_next"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toRightOf="@+id/mBtnPlay"        app:layout_constraintRight_toLeftOf="@+id/mBtnMusicList"        app:layout_constraintTop_toBottomOf="@+id/mPlayProgress" />    <ImageButton        android:id="@+id/mBtnMusicList"        android:layout_width="45dp"        android:layout_height="45dp"        android:background="@drawable/ic_playlist_play"        android:layout_marginStart="15dp"        android:layout_marginEnd="10dp"        android:layout_marginTop="4dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toRightOf="@+id/mBtnNext"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@+id/mPlayProgress"/></androidx.constraintlayout.widget.ConstraintLayout>